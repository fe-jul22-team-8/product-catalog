{
  "name": "server",
  "main": "dist/server",
  "typings": "dist/server",
  "type": "module",
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.11",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.7",
    "concurrently": "^7.5.0",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "2.7.1",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "postinstall": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-esm ./src/server.ts",
    "format": "prettier --write . --ignore-path .gitignore",
    "lint": "eslint . --ignore-path .gitignore --fix",
    "fix-style": "npm run format && npm run lint -- --fix",
    "prepare": "cd .. && husky install ./server/.husky"
  },
  "lint-staged": {
    "*.js": "npm run lint"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "ts-node-dev": "^2.0.0"
  }
}
