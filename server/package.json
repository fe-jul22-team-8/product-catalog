{
  "devDependencies": {
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1"
  },
  "scripts": {
    "format": "prettier --write . --ignore-path .gitignore",
    "lint": "eslint . --ignore-path .gitignore --fix",
    "fix-style": "npm run format && npm run lint -- --fix",
    "prepare": "cd .. && husky install ./server/.husky"
  },
  "lint-staged": {
    "*.js": "npm run lint"
  }
}
