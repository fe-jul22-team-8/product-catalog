{
  "name": "server",
  "main": "server.ts",
  "type": "module",
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.11",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.7",
    "concurrently": "^7.5.0",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "2.7.1",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "build": "swc src -d src",
    "build-dev": "npm run build && SET NODE_ENV=development ts-node-esm --inspect src/index.js",
    "dev": "nodemon --ext ts --exec \"npm run build-dev\"",
    "start": "npm run build && SET NODE_ENV=production ts-node-esm ./src/server.ts",
    "format": "prettier --write . --ignore-path .gitignore",
    "lint": "eslint . --ignore-path .gitignore --fix",
    "fix-style": "npm run format && npm run lint -- --fix",
    "prepare": "cd .. && husky install ./server/.husky"
  },
  "lint-staged": {
    "*.js": "npm run lint"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  }
}
